{
    "grid": [{ "id": "p1", "xs": 12, "class": "main", "table": "unitextTable", "height": "fill" }],
    "spacing": 10,
  
    "p1": [
      {
        "title": "",
        "type": "table",
        "prop": "unitextTable",
        "popupenable": true,
  
        "columns": [
          {
            "prop": "did",
            "title": "$Device",
            "type": "droplist",
            "data":"deviceList",
            "width": 250
          },
  
          {
            "prop": "prop",
            "title": "$prop",
            "type": "input",
            "width": 150
          },
  
          {
            "prop": "address",
            "title": "$address",
            "type": "number",
            "default": 0
          },
          {
            "prop": "vartype",
            "title": "$vartype",
            "type": "droplist",
            "data": [
              {
                "id": "bool",
                "title": "BOOL"
              },
      
              {
                "id": "int8",
                "title": "INT8, 1 байт"
              },
      
              {
                "id": "uint8",
                "title": "UINT8, 1 байт"
              },
      
              {
                "id": "int16",
                "title": "INT16, 2 байта"
              },
      
              {
                "id": "uint16",
                "title": "UINT16, 2 байта"
              },
      
              {
                "id": "int32",
                "title": "INT32, 4 байта"
              },
      
              {
                "id": "uint32",
                "title": "UINT32, 4 байта"
              },
      
              {
                "id": "int64",
                "title": "INT64, 8 байт"
              },
      
              {
                "id": "uint64",
                "title": "UINT64, 8 байт"
              },
      
              {
                "id": "float",
                "title": "FLOAT, 4 байта"
              },
      
              {
                "id": "double",
                "title": "DOUBLE, 8 байт"
              }
            ]
         },
         {
            "prop": "fcr",
            "title": "$fcr_type",
            "type": "droplist",
            "data": [
              {
                "id": "1",
                "title": "Coil",
                "hide": "data.vartype.id != 'bool'"
              },
      
              {
                "id": "2",
                "title": "Discrete Input",
                "hide": "data.vartype.id != 'bool'"
              },
              {
                "id": "3",
                "title": "Holding Register",
                "hide": "data.vartype.id == 'bool'"
              },
              {
                "id": "4",
                "title": "Input Register",
                "hide": "data.vartype.id == 'bool'"
              }
            ]
          }
        ]
      }
    ]
  }